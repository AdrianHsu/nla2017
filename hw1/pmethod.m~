tol = 1e-3;
A = [-2 3; 6 7];
x = [1 1]';

% function [mu, x] = pmethod(A, x, tol, maxit)

% Step 1.
    k = 1;
% Step 2.
    index = 0;
    current_max = -1e10;
    for i = (1:length(x))
        if x(i) > current_max % inf-norm of n-by-1 vector
            current_max = x(i);
            index = i;
        end
    end
% Step 3.
    x = x/x(index);
% Step 4.
    while k <= N
        % Step 5.
        y = A*x;
        mu = y(index);
        
        current_max = -1e10;
        for i = (1:length(x))
            if x(i) > current_max % inf-norm of n-by-1 vector
                current_max = x(i);
                index = i;
            end
        end
    end
% end
